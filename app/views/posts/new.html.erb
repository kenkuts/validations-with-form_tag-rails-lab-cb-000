<h1>Create Post</h1>

<% if @post.errors.any? %>
  <div id="error_explanation">
    <h3> Errors: </h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li> <%= message %></li>
        <% end %>
      </ul>
  </div>
<% end %>

<%= form_tag posts_path, method: "post" do %>
  <div class="field
    <%= " field_with_errors" if @post.errors[:title].any? %>">
    <%= label_tag "title", "Title:" %>
    <%= text_field_tag "title", @post.title %>
  </div>

  <div class="field
    <%= " field_with_errors" if @post.errors[:category].any? %>">
    <%= label_tag "category", "Category:" %>
    <%= text_area_tag "category", @post.category %>
  </div>

  <div class="field
    <%= " field_with_errors" if @post.errors[:content].any? %>">
    <%= label_tag "content", "Content:" %>
    <%= text_area_tag "content", @post.content %>
  </div>

  <%= submit_tag "Create Post" %>
<% end %>
<br>
<%= button_to "List Posts", posts_path, html_options = { :method => :get } %>
